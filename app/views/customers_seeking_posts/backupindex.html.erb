<article ng-app="posts" ng-controller="SearchPostController">
<header>
  <h1 class="h2">Search Postings</h1>
</header>

<section class='search-form'>
  <form>
   <div class="input-group input-group-lg">
   <label for="keywords" class="sr-only" >Keywords</label>
   <input type= "text" name="keywords" class="form-control input-lg" placeholder="Name titles keywords" ng-change="search(keywords)" ng-model="keywords">
   <span class="input-group-btn">
    <button class="btn btn-primary btn-lg" ng-click="search(keywords)">
    Find Postings
    </button>
   </span>
  </div>
 </form>
 <h1 class="searchedFor" ng-if="searchedFor">
  <small>Searched for:</small>
   {{searchedFor}}
 </h1>
</section>


<section class="search-results" ng-if="posts.length > 0">
  <header>
    <h1 class="h3">Results</h1>
  </header>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    <ol class="list-group">
        <li class="list-group-item clearfix" ng-repeat="post in posts">
         <h3 class="pull-right"><small class="text-uppercase">Joined</small> {{ post.created_at | date }}</h3>
          <h2 class="h3"> {{ post.title }} {{ post.content }} <small> {{ post.category }}</small></h2>
          <h4> {{ post.city }}</h4>
        </li>
    </ol>
<%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
</section>

</article>
