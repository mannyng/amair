<%= form_for @seeking_post, method: :post do |p| %>

  <div class="form-group pull-right">
     <%= p.collection_select(:city_id, City.all, :id, :name)%>
  </div>
   <div class="form-group">
     <%= p.collection_select(:category_id, Category.all, :id, :name) %>
  </div>
  <div class="form-group">
    <%= p.label :title %><br />
    <%= p.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= p.label :content %><br />
    <%= p.text_area :content, class: "form-control", size: "24x6" %>
  </div>

<%= p.submit "Submit", class: "btn btn-primary btn-lg" %>
<% end %>
